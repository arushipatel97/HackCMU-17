<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:orientation="vertical"
android:gravity = "center"
    android:background="@drawable/home"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.arushi.hackathon.home">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textSize= "30dp"
    android:text="$100"
    android:id="@+id/donationAmount"
    android:layout_gravity="center_horizontal"
    android:layout_alignBaseline="@+id/tv_info"
    android:layout_alignBottom="@+id/tv_info"
    android:layout_toStartOf="@+id/tv_info"
    android:layout_x="133dp"
    android:layout_y="449dp" />

    <TextView
    android:layout_width="98dp"
    android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="0"
        android:textSize= "30dp"
    android:id="@+id/tv_steps"
    android:layout_alignBottom="@+id/tv_info"
    android:layout_centerHorizontal="true"
    android:layout_x="53dp"
    android:layout_y="215dp" />

    <Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="72dp"
    android:layout_height="58dp"
    android:text="Edit"
    android:id="@+id/button2"
    android:nestedScrollingEnabled="false"
    android:onClick="eButton"
    android:layout_gravity="right"
    android:layout_below="@+id/donationAmount"
    android:layout_toStartOf="@+id/histButton"
    android:layout_x="278dp"
        android:alpha = "0"
    android:layout_y="541dp" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="96dp"
    android:layout_height="58dp"
    android:text="History"
    android:id="@+id/histButton"
    android:onClick="hButton"
    android:alpha = "0"
    android:layout_alignBottom="@+id/tv_info"
    android:layout_alignEnd="@+id/donationAmount"
    android:layout_x="2dp"
    android:layout_y="533dp" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="75dp"
    android:layout_height="wrap_content"
    android:text="Done"
    android:id="@+id/button4"
    android:layout_x="140dp"
    android:alpha = "0"
    android:layout_y="542dp"
    android:onClick="doneButton" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="47dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:textSize= "30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/goalAmount"
        android:layout_x="203dp"
        android:layout_y="212dp" />

    <TextView
        android:layout_width="338dp"
        android:layout_height="61dp"
        android:text="ACM@CMU"
        android:textSize= "20dp"

        android:id="@+id/charity_org"
        android:layout_x="98dp"
        android:layout_y="306dp" />

</AbsoluteLayout>
