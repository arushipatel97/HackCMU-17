<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:gravity = "center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arushi.hackathon.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp"
        android:text="$100"
        android:id="@+id/donationAmount"
        android:layout_gravity="center_horizontal"
        android:layout_alignBaseline="@+id/tv_info"
        android:layout_alignBottom="@+id/tv_info"
        android:layout_toStartOf="@+id/tv_info"
        android:layout_x="109dp"
        android:layout_y="152dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Steps"
        android:id="@+id/tv_info"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_x="112dp"
        android:layout_y="276dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textSize="40dp"
        android:id="@+id/tv_steps"
        android:layout_alignBottom="@+id/tv_info"
        android:layout_centerHorizontal="true"
        android:layout_x="200dp"
        android:layout_y="271dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HackCMU"
        android:layout_gravity="right" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/button2"
        android:nestedScrollingEnabled="false"
        android:onClick="eButton"
        android:layout_gravity="right"
        android:layout_below="@+id/donationAmount"
        android:layout_toStartOf="@+id/histButton"
        android:layout_x="18dp"
        android:layout_y="438dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:id="@+id/histButton"
        android:onClick="hButton"
        android:layout_alignBottom="@+id/tv_info"
        android:layout_alignEnd="@+id/donationAmount"
        android:layout_x="248dp"
        android:layout_y="420dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button4"
        android:layout_x="135dp"
        android:layout_y="372dp" />

</AbsoluteLayout>
